@{
  Layout = "_Layout";
}
<div class='row'>

  <div class='col-md-12'>

    <form class="" action="/product" method="post" enctype="multipart/form-data">

      <h3>Add New Product</h3>

      <h3>Product</h3>


    <div class='form-group'>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
      </div>

      <div class='form-group'>
        <label for="producttype">Type</label>
        <input type="text" name="producttype" id="type">
      </div>

      <div class='form-group'>
        <label for="description">Description</label>
        <input type="text-are" name="description" id="description">
      </div>

      <div class='form-group'>
        <label for="availability">Available To Order</label>
        <input type="checkbox" name="availability" id="availability">
      </div>

      <div class='form-group'>
        <label for="price">Price</label>
        <input type="text" name="price" id="price">
      </div>

      <div class='form-group'>
        <label for="img">Image Name</label>
        <input type="file" name="img" id="img">
      </div>

      <button type="submit" name="button">Add Product</button>
    </form>

  </div>
</div>
