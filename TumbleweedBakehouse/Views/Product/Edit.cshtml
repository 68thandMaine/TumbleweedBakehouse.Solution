@using TumbleweedBakehouse.Models
@{
  Layout = "_Layout";
}
<div class='row'>

  <div class='col-md-12'>
    <form class="" action="/product/{productId}" method="post" enctype="multipart/form-data">
      <h3>Product</h3>
      <div class='form-group'>
        <label for="name">Name</label>
        <input type="text" name="name" id="name"  placeholder ="@Model.GetProductName()">
      </div>

      <div class='form-group'>
        <label for="type">Type</label>
        <input type="text" name="type" id="type" value="@Model.GetProductType()" placeholder ="@Model.GetProductType()">
      </div>

      <div class='form-group'>
        <label for="description">Description</label>
        <input type="text-are" name="description" id="description" value="@Model.GetDescription()" placeholder ="@Model.GetDescription()">
      </div>

      <div class='form-group'>
        <label for="available">Available</label>
        <input type="checkbox" name="available" id="available" value="Model.GetAvailability()">
      </div>

      <div class='form-group'>
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="@Model.GetPrice()" placeholder = "@Model.GetPrice()">
      </div>

      <div class='form-group'>
        <label for="img">Image</label>
        <input type="file" name="img" id="img" value="@Model.GetImg()">
      </div>
      <button type="submit" name="button">Update!</button>
    </form>
  </div>

</div>
